<% include ../partials/headers %>

<div class="container">
    <div class="row">
        <h1 style="text-align:center;">Create new campground</h1>
        <div style="width: 30%; margin: 40px auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input class="form-control" type="text" placeholder="Yosemite" name="name" required>
                </div>
                <div class="form-group">
                    <label for="imageUrl">Image URL</label>
                   <input class="form-control" type="text" placeholder="https://source.unsplash.com/TCCCKgdFmBo" name="imageUrl" required>
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                   <input class="form-control" type="text" placeholder="Californiaâ€™s Sierra Nevada mountains." name="description" required>
                </div>
                <div class="form-group">
                    <label for="price">Cost</label>
                   <input class="form-control" type="number" placeholder="9.99" name="price" min="0.01" step="0.01" required>
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" placeholder="Yosemite National Park, CA" required>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds">Go back!</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>
